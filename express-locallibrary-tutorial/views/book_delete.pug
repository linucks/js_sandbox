extends layout

block content
  h1 #{title}
  h3 #{book.title}

  if bookinstances.length

    p #[strong Delete the following bookinstances before attempting to delete this author.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances
      dl
      each booki in bookinstances
        dt
          a(href=booki.url) #{booki._id}
          |: #{booki.status}

  else
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#book.form-control(type='hidden',name='book', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete
